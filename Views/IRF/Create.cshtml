@model RACU11.Models.IRF

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>IRF</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BlotterEntryNumber" class="control-label"></label>
                <input asp-for="BlotterEntryNumber" class="form-control" />
                <span asp-validation-for="BlotterEntryNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeOfIncident" class="control-label"></label>
                <!-- <input asp-for="TypeOfIncident" class="form-control" /> -->
                <select id="TypeOfIncident" name="TypeOfIncident" class="form-control">
                    <option value=""></option>
                    <option value="online libel">online libel</option>
                    <option value="online threat">online threat</option>
                    <option value="identity theft">identity theft</option>
                    <option value="hacking">hacking</option>
                    <option value="anti-photo & video voyeurism (RA 9995)">anti-photo & video voyeurism (RA 9995)</option>
                    <option value="unjust vexation">unjust vexation</option>
                    <option value="robbery extortion">robbery extortion</option>
                    <option value="atm/credit card fraud">atm/credit card fraud</option>
                    <option value="child pornography">child pornography</option>
                    <option value="violence against women and children (VAWC, RA 9262)">violence against women and children (VAWC, RA 9262)</option>
                    <option value="illegal access">illegal access</option>
                    <option value="email spoofing">email spoofing</option>
                </select>
                <span asp-validation-for="TypeOfIncident" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReportingTimeAndDateOfReport" class="control-label"></label>
                <input asp-for="ReportingTimeAndDateOfReport" class="form-control" />
                <span asp-validation-for="ReportingTimeAndDateOfReport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReportingTimeAndDateOfIncident" class="control-label"></label>
                <input asp-for="ReportingTimeAndDateOfIncident" class="form-control" />
                <span asp-validation-for="ReportingTimeAndDateOfIncident" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsThereSuspect" /> @Html.DisplayNameFor(model => model.IsThereSuspect)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsThereMoreThanOneSuspect" /> @Html.DisplayNameFor(model => model.IsThereMoreThanOneSuspect)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
